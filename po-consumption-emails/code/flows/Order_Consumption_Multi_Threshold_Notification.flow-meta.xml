    <description>Sends email notifications when Purchase Orders reach 50%, 75%, or 90% consumption thresholds. Automatically resets notification flags when consumption drops below thresholds (Option B). Supports both one-time and repeated reminder modes.</description>
    <formulas>
        <name>fxResetIfBelow50</name>
        <dataType>Boolean</dataType>
        <expression>IF({!$Record.Consumed_Amount_Percent__c} &lt; 0.5, false, {!$Record.Notified_50_Percent__c})</expression>
    </formulas>
    <formulas>
        <name>fxResetIfBelow75</name>
        <dataType>Boolean</dataType>
        <expression>IF({!$Record.Consumed_Amount_Percent__c} &lt; 0.75, false, {!$Record.Notified_75_Percent__c})</expression>
