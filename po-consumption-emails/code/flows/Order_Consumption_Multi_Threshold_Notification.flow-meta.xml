    <decisions>
        <name>Check_50_Percent_One_Time</name>
        <label>Check 50 Percent One Time</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Skip 50%</defaultConnectorLabel>
        <rules>
            <name>Send_50_Notification</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Consumed_Amount_Percent__c</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>0.5</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Consumed_Amount_Percent__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <numberValue>0.75</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Notified_50_Percent__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_50_Percent_Email</targetReference>
            </connector>
            <label>Send 50% Notification</label>
        </rules>
    </decisions>
