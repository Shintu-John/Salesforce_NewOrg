<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Object: Prisoner
Trigger: Refer to Specialist Support is changed to true
Description: Creates a Specialist Support Referral Form record when checkbox is changed to true.</description>
    <environments>Default</environments>
    <interviewLabel>Prisoner - {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Prisoner - Specialist Support Eligible</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>CreateSpecialistSupportRecord</name>
        <label>CreateSpecialistSupportRecord</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Email__c</field>
            <value>
                <elementReference>$Record.Personal_email_address__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Home_Address__c</field>
            <value>
                <elementReference>$Record.Home_Address__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Phone_Number__c</field>
            <value>
                <elementReference>$Record.Mobile_phone_number__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Referral_Date__c</field>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Referral_Name__c</field>
            <value>
                <elementReference>$Record.Name</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Referrer_Email__c</field>
            <value>
                <elementReference>$User.Email</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Referrer_Name__c</field>
            <value>
                <elementReference>$User.Full_Name__c</elementReference>
            </value>
        </inputAssignments>
        <object>Specialist_Support_Referral_Form__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>CreateSpecialistSupportRecord</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Refer_to_Specialist_Support__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Refer_to_Specialist_Support__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Prisoner__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
