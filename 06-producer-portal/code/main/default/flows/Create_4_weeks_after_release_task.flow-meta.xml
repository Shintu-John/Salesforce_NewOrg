        <locationY>0</locationY>
        <connector>
            <targetReference>Is_actual_release_date_null</targetReference>
        </connector>
        <filterFormula>ISNEW() || ISCHANGED({!$Record.Actual_Release_Date__c}) &amp;&amp;NOT(ISNULL({!$Record.Actual_Release_Date__c}))</filterFormula>
