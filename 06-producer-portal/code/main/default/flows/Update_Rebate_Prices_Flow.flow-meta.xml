    <formulas>
        <name>byPassValidationScreen</name>
        <dataType>Boolean</dataType>
        <expression>AND(OR({!$User.Full_Name__c} == &quot;Gerry Gregoire&quot;,{!$User.Full_Name__c} == &quot;Stacey Doyle&quot;,{!$User.Full_Name__c} == &quot;Chantal Cooke&quot;) 
, {!JobRecord.Temp_Field_for_Mass_Update__c})</expression>
    </formulas>
    <formulas>
        <name>ItemCommissionFormulaText</name>
        <dataType>String</dataType>
        <expression>
&quot;£&quot; + text( floor( {!JobRecord.Item_Commission__c}) ) + &quot;.&quot; + right( text( ( 1 +{!JobRecord.Item_Commission__c} - floor( {!JobRecord.Item_Commission__c} ) ) * 100 ), 2 )</expression>
    </formulas>
    <formulas>
        <name>Job_Prevent_Rebate_Cost_Change</name>
        <dataType>Boolean</dataType>
        <expression>{!JobRecord.RecordType.DeveloperName} == &quot;Rebate&quot; &amp;&amp; {!JobRecord.Vendor_Inv_Added_To_Automatic_Job_Charge__c} &gt; 0</expression>
    </formulas>
    <formulas>
        <name>JobCommissionFormula</name>
        <dataType>Currency</dataType>
        <expression>({!Sell_ppt} - {!Buy_ppt})</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>JobCommissionFormulaText</name>
        <dataType>String</dataType>
        <expression>&quot;£&quot; + text( floor( {!JobCommissionFormula}) ) + &quot;.&quot; + right( text( ( 1 +{!JobCommissionFormula} - floor( {!JobCommissionFormula} ) ) * 100 ), 2 )</expression>
    </formulas>
    <formulas>
        <name>TotalCommissionFormula</name>
        <dataType>Currency</dataType>
        <expression>({!Sell_ppt} - {!Buy_ppt}) + {!JobRecord.Item_Commission__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>TotalCommissionFormulaText</name>
        <dataType>String</dataType>
        <expression>&quot;£&quot; + text( floor( {!TotalCommissionFormula} )) + &quot;.&quot; + right( text( ( 1 +{!TotalCommissionFormula} - floor( {!TotalCommissionFormula} ) ) * 100 ), 2 )</expression>
    </formulas>
