<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Capitalise_Name</name>
        <label>Capitalise Name</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <assignmentItems>
            <assignToReference>Get_Name.FirstName</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>FirstName</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Get_Name.LastName</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>LastName</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Apply_Capitalised_Name</targetReference>
        </connector>
    </assignments>
    <environments>Default</environments>
    <formulas>
        <name>FirstName</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT({!$Record.FirstName}, 1)) &amp; MID({!$Record.FirstName}, 2, LEN({!$Record.FirstName}) - 1)</expression>
    </formulas>
    <formulas>
        <name>LastName</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT({!$Record.LastName}, 1)) &amp; MID({!$Record.LastName}, 2, LEN({!$Record.LastName}) - 1)</expression>
    </formulas>
    <formulas>
        <name>MiddleName</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT({!$Record.MiddleName}, 1)) &amp; MID({!$Record.MiddleName}, 2, LEN({!$Record.MiddleName}) - 1)</expression>
    </formulas>
    <interviewLabel>Automatically Capitalise Contact Names {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Automatically Capitalise Contact Names</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_Name</name>
        <label>Get Name</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Capitalise_Name</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Contact</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>FirstName</queriedFields>
        <queriedFields>LastName</queriedFields>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Apply_Capitalised_Name</name>
        <label>Apply Capitalised Name</label>
        <locationX>176</locationX>
        <locationY>539</locationY>
        <inputAssignments>
            <field>FirstName</field>
            <value>
                <elementReference>FirstName</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>LastName</field>
            <value>
                <elementReference>LastName</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Name</targetReference>
        </connector>
        <filterFormula>OR(
    LEFT({!$Record.FirstName}, 1) &lt;&gt; UPPER(LEFT({!$Record.FirstName}, 1)),
    LEFT({!$Record.LastName}, 1) &lt;&gt; UPPER(LEFT({!$Record.LastName}, 1))
)</filterFormula>
        <object>Contact</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
</Flow>
