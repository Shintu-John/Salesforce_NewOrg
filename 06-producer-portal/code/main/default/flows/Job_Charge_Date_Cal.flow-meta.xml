    <assignments>
        <name>Job_Charge_Date_Assignment</name>
        <label>Job Charge Date Assignment</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <assignmentItems>
            <assignToReference>jobCharge_Date</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>jobChargeDate_Formula</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <environments>Default</environments>
    <formulas>
        <name>jobChargeDate_Formula</name>
        <dataType>Date</dataType>
        <expression>IF(NOT(ISNULL({!job_deliveryDate})) &amp;&amp; OR({!jobCharge_chargeType} ==
            &quot;Job&quot;, {!jobCharge_chargeType} == &quot;Rebate Transport&quot;) ,
            {!job_deliveryDate},
            IF(NOT(ISNULL({!job_collectionDate})) &amp;&amp; OR({!jobCharge_chargeType} ==
            &quot;Tonnage&quot;, {!jobCharge_chargeType} == &quot;Rebate&quot;) ,
            {!job_collectionDate},
            IF(NOT(ISNULL({!jobCharge_createdDate})), {!jobCharge_createdDate} ,
            {!$Flow.CurrentDate})
            )
            )</expression>
    </formulas>
    <interviewLabel>Job Charge Date Cal {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Job Charge Date Cal</label>
