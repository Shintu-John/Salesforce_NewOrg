    <formulas>
        <name>CustomerIncreaseCalculator</name>
        <dataType>Currency</dataType>
        <expression>IF(
  AND(
    {!$Record.Pricing_Method__c} = &quot;Rebate&quot;,
    OR(
      ISNULL({!$Record.Current_Sales_Transport1__c}), 
      ISNULL({!$Record.Sales_Transport__c})
    )
  ), 
  NULL, 

  IF(
    AND(
      {!$Record.Pricing_Method__c} &lt;&gt; &quot;Rebate&quot;,
      OR(
        ISNULL({!$Record.Current_Sales_Price__c}), 
        ISNULL({!$Record.Sales_Price__c})
      )
    ), 
    NULL, 

    IF(
      {!$Record.Pricing_Method__c} = &quot;Rebate&quot;,
      ({!$Record.Sales_Transport__c} - {!$Record.Current_Sales_Transport1__c} ) / 
        {!$Record.Current_Sales_Transport1__c} *100,

      IF(
        {!$Record.Pricing_Method__c} &lt;&gt; &quot;Rebate&quot;,
        ({!$Record.Sales_Price__c} - {!$Record.Current_Sales_Price__c} ) / 
          {!$Record.Current_Sales_Price__c} *100,

        NULL
      )
    )
  )
)</expression>
        <scale>2</scale>
    </formulas>
