    </formulas>
    <formulas>
        <name>currentQuarterName</name>
        <dataType>String</dataType>
        <expression>&quot;Q&quot; + TEXT(FLOOR(MONTH({!quarterStartDate}) / 3) + 1)</expression>
    </formulas>
    <formulas>
        <name>endDate</name>
        <dataType>Date</dataType>
        <expression>IF(NOT(ISNULL({!complianceDate})) &amp;&amp; {!complianceDate} &lt; {!$Flow.CurrentDate}, {!complianceDate}, {!$Flow.CurrentDate})</expression>
    </formulas>
    <formulas>
        <name>InitialQuarterStartDate</name>
        <dataType>Date</dataType>
        <expression>CASE(
    FLOOR((MONTH({!startDate}) - 1) / 3),
    0, DATE(YEAR({!startDate}), 1, 1),
    1, DATE(YEAR({!startDate}), 4, 1),
    2, DATE(YEAR({!startDate}), 7, 1),
    3, DATE(YEAR({!startDate}), 10, 1),
    NULL
)</expression>
    </formulas>
    <formulas>
        <name>prevYear</name>
        <dataType>String</dataType>
        <expression>TEXT(VALUE(TEXT({!$Record.Compliance_Year__c})) - 1)</expression>
    </formulas>
    <formulas>
        <name>startDate</name>
        <dataType>Date</dataType>
        <expression>ADDMONTHS( {!endDate}, -12)</expression>
    </formulas>
