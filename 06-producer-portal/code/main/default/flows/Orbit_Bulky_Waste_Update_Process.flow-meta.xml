    <formulas>
        <name>CubicYardTotalCalculated</name>
        <dataType>Number</dataType>
        <expression>IF({!StoreCubicYards} = 1, 70,
IF({!StoreCubicYards} = 2, 95,
IF({!StoreCubicYards} = 3, 120,
IF({!StoreCubicYards} = 4, 145,
IF({!StoreCubicYards} = 5, 170,
IF({!StoreCubicYards} = 6, 195,
IF({!StoreCubicYards} = 7, 220,
IF({!StoreCubicYards} = 8, 245,
IF({!StoreCubicYards} = 9, 270,
IF({!StoreCubicYards} = 10, 295,
IF({!StoreCubicYards} = 11, 320,
IF({!StoreCubicYards} = 12, 345,
IF({!StoreCubicYards} = 13, 370,
IF({!StoreCubicYards} = 14, 395,
IF(AND({!StoreCubicYards} &gt;= 15, {!StoreCubicYards} &lt;= 18), 495,
IF(AND({!StoreCubicYards} &gt;= 19, {!StoreCubicYards} &lt;= 26), 695, 0
))))))))))))))))</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>CustomerReference</name>
        <dataType>String</dataType>
        <expression>&quot;Collection of &quot; &amp;
LEFT(
    IF({!StoreCubicYards} &gt; 0, TEXT({!StoreCubicYards}) &amp; &quot; Cubic Yard, &quot;, &quot;&quot;) &amp;
    IF({!StorePOPs} &gt; 0, TEXT({!StorePOPs}) &amp; &quot; POPs Item, &quot;, &quot;&quot;) &amp;
    IF({!StoreMattress} &gt; 0, TEXT({!StoreMattress}) &amp; &quot; Mattress, &quot;, &quot;&quot;) &amp;
    IF({!StoreTVMonitor} &gt; 0, TEXT({!StoreTVMonitor}) &amp; &quot; TV/Monitor, &quot;, &quot;&quot;) &amp;
    IF({!StoreFF} &gt; 0, TEXT({!StoreFF}) &amp; &quot; Fridge/Freezer, &quot;, &quot;&quot;) &amp;
    IF({!StoreCarTyre} &gt; 0, TEXT({!StoreCarTyre}) &amp; &quot; Car Tyre, &quot;, &quot;&quot;) &amp;
    IF({!StoreAmericanFF} &gt; 0, TEXT({!StoreAmericanFF}) &amp; &quot; American Fridge Freezer, &quot;, &quot;&quot;) &amp;
    IF({!StoreCarBattery} &gt; 0, TEXT({!StoreCarBattery}) &amp; &quot; Car Battery, &quot;, &quot;&quot;) &amp;
    IF({!StoreGasBottle} &gt; 0, TEXT({!StoreGasBottle}) &amp; &quot; Gas Bottle, &quot;, &quot;&quot;) &amp;
    IF({!StoreFloTube} &gt; 0, TEXT({!StoreFloTube}) &amp; &quot; Fluorescent Tube/Bulb, &quot;, &quot;&quot;),
    LEN(
        IF({!StoreCubicYards} &gt; 0, TEXT({!StoreCubicYards}) &amp; &quot; Cubic Yard, &quot;, &quot;&quot;) &amp;
        IF({!StorePOPs} &gt; 0, TEXT({!StorePOPs}) &amp; &quot; POPs Item, &quot;, &quot;&quot;) &amp;
        IF({!StoreMattress} &gt; 0, TEXT({!StoreMattress}) &amp; &quot; Mattress, &quot;, &quot;&quot;) &amp;
        IF({!StoreTVMonitor} &gt; 0, TEXT({!StoreTVMonitor}) &amp; &quot; TV/Monitor, &quot;, &quot;&quot;) &amp;
        IF({!StoreFF} &gt; 0, TEXT({!StoreFF}) &amp; &quot; Fridge/Freezer, &quot;, &quot;&quot;) &amp;
        IF({!StoreCarTyre} &gt; 0, TEXT({!StoreCarTyre}) &amp; &quot; Car Tyre, &quot;, &quot;&quot;) &amp;
        IF({!StoreAmericanFF} &gt; 0, TEXT({!StoreAmericanFF}) &amp; &quot; American Fridge Freezer, &quot;, &quot;&quot;) &amp;
        IF({!StoreCarBattery} &gt; 0, TEXT({!StoreCarBattery}) &amp; &quot; Car Battery, &quot;, &quot;&quot;) &amp;
        IF({!StoreGasBottle} &gt; 0, TEXT({!StoreGasBottle}) &amp; &quot; Gas Bottle, &quot;, &quot;&quot;) &amp;
        IF({!StoreFloTube} &gt; 0, TEXT({!StoreFloTube}) &amp; &quot; Fluorescent Tube/Bulb, &quot;, &quot;&quot;)
    ) - 2
)</expression>
    </formulas>
    <formulas>
        <name>TotalSalesPrice</name>
        <dataType>Currency</dataType>
        <expression>{!CubicYardTotalCalculated} +
   NULLVALUE({!StorePOPs}, 0) * 21.50 +
   NULLVALUE({!StoreMattress}, 0) * 21.50 +
   NULLVALUE({!StoreTVMonitor}, 0) * 18.50 +
   NULLVALUE({!StoreFF}, 0) * 42.50 +
   NULLVALUE({!StoreCarTyre}, 0) * 9.50 +
   NULLVALUE({!StoreAmericanFF}, 0) * 85.00 +
   NULLVALUE({!StoreCarBattery}, 0) * 8.50 +
   NULLVALUE({!StoreGasBottle}, 0) * 15.00 +
   NULLVALUE({!StoreFloTube}, 0) * 4.00</expression>
        <scale>2</scale>
    </formulas>
