        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Most_Recent_Message__c</field>
            <value>
                <elementReference>Now</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status</field>
            <value>
                <stringValue>Case Raised</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Status_and_MRM</targetReference>
        </connector>
        <filterLogic>1 AND (2 or 3 or 4)</filterLogic>
        <filters>
            <field>RecordTypeId</field>
