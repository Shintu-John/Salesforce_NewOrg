        <label>Prisoner Status</label>
        <locationX>446</locationX>
        <locationY>431</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Unemployed_Additional_Support</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Get_Prison_Appointmnet_Record.Current_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Unemployed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_Prison_Appointmnet_Record.Current_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Additional support</stringValue>
                </rightValue>
