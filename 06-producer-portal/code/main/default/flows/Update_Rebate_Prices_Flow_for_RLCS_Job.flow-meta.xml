    <formulas>
        <name>ItemCommissionFormulaText</name>
        <dataType>String</dataType>
        <expression>
&quot;£&quot; + text( floor( {!Get_RLCS_Job.Item_Commission__c}) ) + &quot;.&quot; + right( text( ( 1 +{!Get_RLCS_Job.Item_Commission__c} - floor( {!Get_RLCS_Job.Item_Commission__c} ) ) * 100 ), 2 )</expression>
