        <name>AdditionalServicesRequired</name>
        <dataType>String</dataType>
        <expression>IF(
    LEN(TRIM({!ConcatenatedServices})) &gt; 0,
    LEFT(TRIM({!ConcatenatedServices}), LEN(TRIM({!ConcatenatedServices})) - 1),
    &quot;&quot;
)</expression>
