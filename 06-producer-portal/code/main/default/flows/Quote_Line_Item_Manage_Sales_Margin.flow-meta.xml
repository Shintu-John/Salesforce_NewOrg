    <formulas>
        <name>LIFT_18p_Margin</name>
        <dataType>Currency</dataType>
        <expression>IF(
  AND(
    {!$Record.Partner_price__c} &lt;= 0,
    ISPICKVAL({!$Record.Pricing_method__c}, &quot;Rebate&quot;)
  ),
  0,

  IF(
    AND(
      {!$Record.Partner_price__c} &gt; 0,
      NOT(ISPICKVAL({!$Record.Pricing_method__c}, &quot;Rebate&quot;))
    ),
    ROUND({!$Record.Partner_price__c} / (1 - 0.18), 0),

    IF(
      AND(
        {!$Record.Partner_price__c} &gt; 0,
        ISPICKVAL({!$Record.Pricing_method__c}, &quot;Rebate&quot;)
      ),
      ROUND({!$Record.Partner_price__c} * (1 - 0.18), 0),
      NULL
    )
  )
)</expression>
