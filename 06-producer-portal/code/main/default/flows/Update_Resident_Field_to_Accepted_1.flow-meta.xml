<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Migrated from the Update Resident Field to Accepted process using Referral Outcome is offered place criteria.
Update resident status field to accepted when referral meeting form results in offered place in charity</description>
    <label>Update Resident Field to Accepted_1</label>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>myRule_1_A1</name>
        <label>Update status of application to accepted</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Reason_for_status__c</field>
            <value>
                <stringValue>Meets acceptance criteria</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status_of_application__c</field>
            <value>
                <stringValue>Accepted</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record.Resident_Name__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>myRule_1_A1</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Meeting_Outcome__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Offered place in Charity</stringValue>
            </value>
        </filters>
        <object>Referral_Meeting_Form__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
