<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Does_rebate_charge_already_exist</name>
        <label>Does rebate charge already exist?</label>
        <locationX>182</locationX>
        <locationY>431</locationY>
        <defaultConnector>
            <targetReference>Create_RLCS_charge</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Check_for_existing_rebate_charge.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_existing_rebate_charge</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>20/09/2025 : removed the static Id dependency
19/05/2025: Some jobs we pay treatment (tonnage), but issue a rebate to the customer. This process creates/maintains a rebate charge.</description>
    <environments>Default</environments>
    <formulas>
        <name>NOW</name>
        <dataType>Date</dataType>
        <expression>NOW()</expression>
    </formulas>
    <formulas>
        <name>rebateTotal</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Material_Weight_Tonnes__c} * {!$Record.Order_Product__r.RLCS_Variable_Rebate__c}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>RLCS Job: Manage Variable/Rebate Process {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RLCS Job: Manage Variable/Rebate Process</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create_RLCS_charge</name>
        <label>Create RLCS charge</label>
        <locationX>314</locationX>
        <locationY>539</locationY>
        <inputAssignments>
            <field>Charge_Type__c</field>
            <value>
                <stringValue>Rebate</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Cost__c</field>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Date__c</field>
            <value>
                <elementReference>NOW</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>RLCS_Job__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>RecordTypeId</field>
            <value>
                <elementReference>$Setup.Static_Id__c.RecordType_RLCSCharge_Automatic__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Sales_Account__c</field>
            <value>
                <elementReference>$Record.Customer_Account__r.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Sales_Price__c</field>
            <value>
                <elementReference>rebateTotal</elementReference>
            </value>
        </inputAssignments>
        <object>RLCS_Charge__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <recordLookups>
        <name>Check_for_existing_rebate_charge</name>
        <label>Check for existing rebate charge</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Does_rebate_charge_already_exist</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>RLCS_Job__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Charge_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Rebate</stringValue>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>RLCS_Charge__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_existing_rebate_charge</name>
        <label>Update existing rebate charge</label>
        <locationX>50</locationX>
        <locationY>539</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>RLCS_Job__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Charge_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Rebate</stringValue>
            </value>
        </filters>
        <inputAssignments>
            <field>Sales_Price__c</field>
            <value>
                <elementReference>rebateTotal</elementReference>
            </value>
        </inputAssignments>
        <object>RLCS_Charge__c</object>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_for_existing_rebate_charge</targetReference>
        </connector>
        <filterFormula>AND(
{!$Record.Order_Product__r.RLCS_Variable_Rebate__c} &gt; 0,
OR(
ISCHANGED({!$Record.Material_Weight_Tonnes__c}),
ISCHANGED({!$Record.GB_Update_Field__c})))</filterFormula>
        <object>RLCS_Job__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
