    <formulas>
        <name>templateName</name>
        <dataType>String</dataType>
        <expression>IF(TEXT({!Get_RLCS_Job.Pricing_Method__c})=&quot;Fixed&quot;,

CASE(TEXT({!Get_RLCS_Job.Type__c}), &quot;Exchange&quot;, &quot;RLCS_Fixed_Job_Template_Exchange&quot;, &quot;Wait &amp; Load&quot;, &quot;RLCS_Fixed_Job_Template_Wait_Load&quot;, &quot;RLCS_Fixed_Job_Template_Delivery&quot;)
,
IF(TEXT({!Get_RLCS_Job.Pricing_Method__c})=&quot;Variable&quot;,

CASE(TEXT({!Get_RLCS_Job.Type__c}), &quot;Exchange&quot;, &quot;RLCS_Variable_Job_Template_Exchange&quot;, &quot;Wait &amp; Load&quot;, &quot;RLCS_Variable_Job_Template_Wait_Load&quot;, &quot;RLCS_Variable_Job_Template_Delivery&quot;)

,
IF(TEXT({!Get_RLCS_Job.Pricing_Method__c})=&quot;Rebate&quot;,

CASE(TEXT({!Get_RLCS_Job.Type__c}), &quot;Exchange&quot;, &quot;RLCS_Rebate_Job_Template_Exchange&quot;, &quot;Wait &amp; Load&quot;, &quot;RLCS_Rebate_Job_Template_Wait_Load&quot;, &quot;RLCS_Rebate_Job_Template_Delivery&quot;)

,
&quot;No Template Found&quot;)))</expression>
    </formulas>
