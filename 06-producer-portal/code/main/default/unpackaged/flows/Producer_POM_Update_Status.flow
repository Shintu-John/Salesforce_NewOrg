        <rules>
            <name>Is_Signed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Is_Record_Signed__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Status_Signed</targetReference>
            </connector>
            <label>Is Signed</label>
        </rules>
        <rules>
            <name>Has_Unanswered_Questions</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Acknowledgement_of_Statements__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Unanswered_Questions__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Status_Questions_Required</targetReference>
            </connector>
            <label>Has Unanswered Questions</label>
        </rules>
        <rules>
            <name>Ready_For_Director_Signature</name>
            <conditionLogic>(1 AND 2 AND 3) OR (1 AND 4 AND 3)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Acknowledgement_of_Statements__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Unanswered_Questions__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Is_Record_Signed__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Unanswered_Questions__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Status_Pending_Director</targetReference>
            </connector>
            <label>Ready For Director Signature</label>
        </rules>
        <rules>
            <name>Is_Acknowledged</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Acknowledgement_of_Statements__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Status_Acknowledge_Market_Data</targetReference>
            </connector>
            <label>Is Acknowledged</label>
        </rules>
        <rules>
            <name>Is_Ready_To_Acknowledge</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Is_Ready_To_Acknowledge__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Acknowledgement_of_Statements__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Status_Ready_To_Acknowledge</targetReference>
            </connector>
            <label>Is Ready To Acknowledge</label>
        </rules>
    </decisions>
