<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="showFlow" type="Boolean" default="false" />
    <aura:attribute name="showAckField" type="Boolean" default="false" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <!-- Show flow modal when showFlow is true -->
    <aura:if isTrue="{!v.showFlow}">
        <div class="slds-modal slds-fade-in-open" role="dialog">
            <div class="slds-modal__container" style="max-width: 80rem;">
                <header class="slds-modal__header">
                    <h2 class="slds-text-heading_medium">Producer Acknowledgement</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium" style="min-height: 20rem;">
                    <lightning:flow aura:id="flowModal"
                                    onstatuschange="{!c.handleFlowStatusChange}" />
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>
