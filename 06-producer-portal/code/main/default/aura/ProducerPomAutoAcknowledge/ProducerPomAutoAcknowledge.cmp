<aura:component controller="ProducerPomAcknowledgeController"
                implements="flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes"
                access="global">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="hasChecked" type="Boolean" default="false" />
    <aura:attribute name="showFlowModal" type="Boolean" default="false" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler event="force:refreshView" action="{!c.handleRefresh}" />

    <!-- Flow Modal -->
    <aura:if isTrue="{!v.showFlowModal}">
        <div class="slds-modal slds-fade-in-open" role="dialog">
            <div class="slds-modal__container" style="max-width: 50rem;">
                <div class="slds-modal__content slds-p-around_medium">
                    <lightning:flow aura:id="flowComponent" onstatuschange="{!c.handleFlowStatusChange}" />
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>
